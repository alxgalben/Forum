{% extends 'backend_layout.html.twig' %}

{% block body %}
    <h1>Add a new category</h1>
    {{ form_start(form) }}
    <div class="col">
        <div class="form-group">
            {{ form_label(form.title, null, {'label_attr': {'class': 'col-form-label'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control', 'style': 'width: 20%;'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.description, null, {'label_attr': {'class': 'col-form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'style': 'width: 20%;'}}) }}
        </div>
        <div class="mb-3">
            <div class="col" id="some-custom-id">
                {{ form_label(form.published, null, {'label_attr': {'class': 'col-form-label'}}) }}
                {{ form_widget(form.published, {'attr': {'class': 'form-check-input custom-checkbox', 'style': 'width: 1rem; height: 1rem; margin-left:5px; margin-top:10px;'}}) }}
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
