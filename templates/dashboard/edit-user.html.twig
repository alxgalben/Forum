{% extends 'backend_layout.html.twig' %}
{% block title %}Edit Account{% endblock %}

{% block content %}
    <div style="margin-left: 15%;">
        <div>
            <h1>Edit Account</h1>
            {{ form_start(editForm) }}

            <div class="col">
                <div class="col">
                    {{ form_label(editForm.username, null, {'label_attr': {'class': 'col-form-label'}}) }}
                    {{ form_widget(editForm.username, {'attr': {'class': 'form-control', 'style': 'width: 20%;'}}) }}
                </div>
                <div class="col">
                    {{ form_label(editForm.email, null, {'label_attr': {'class': 'col-form-label'}}) }}
                    {{ form_widget(editForm.email, {'attr': {'class': 'form-control', 'style': 'width: 20%;'}}) }}
                </div>
                <button type="submit" class="btn btn-primary" style="margin-top: 20px;">Save</button>
            </div>

            {{ form_end(editForm) }}
        </div>
    </div>

{% endblock %}
