{% extends 'backend_layout.html.twig' %}

{% block title %}4oom | dashboard{% endblock %}

{% block content %}
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Moderators</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header border-0">
                <h3 class="card-title">Manage moderators</h3>
                <div class="card-tools">
                    <a href="#" class="btn btn-tool btn-sm">
                        <i class="fas fa-download"></i>
                    </a>
                    <a href="#" class="btn btn-tool btn-sm">
                        <i class="fas fa-bars"></i>
                    </a>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td><b>{{ user.id }}</b></td>
                            <td><b>{{ user.username }}</b></td>
                            <td><b>{{ user.email }}</b></td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <a href="{{ path('main', {'email': user.email}) }}"
                                       class="btn btn-primary mr-2">Impersonate</a>
                                    <a href="{{ path('set-user-actions', {'user': 'moderators', 'id': user.id, 'action': 'edit'}) }}"
                                       class="btn btn-primary mr-2">Edit</a>
                                    <a href="{{ path('set-user-actions', {'user': 'moderators', 'id': user.id, 'action': 'delete'}) }}"
                                       class="btn btn-danger" style="margin-right: 10px;">Delete</a>
                                    {% if not user.isActive %}
                                        <a href="{{ path('set-user-actions', {'user': 'moderators', 'id': user.id, 'action': 'activate'}) }}">
                                            <button type="button" class="btn btn-success">mark as active</button>
                                        </a>
                                    {% else %}
                                        <a href="{{ path('set-user-actions', {'user': 'moderators', 'id': user.id, 'action': 'deactivate'}) }}">
                                            <button type="button" class="btn btn-secondary">mark as inactive</button>
                                        </a>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
