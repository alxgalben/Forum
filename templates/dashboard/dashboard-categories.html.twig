{% extends 'backend_layout.html.twig' %}

{% block title %}4oom | dashboard{% endblock %}

{% block content %}
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Categories</h1>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <div class="card">
            <div class="card-header border-0">
                <h3 class="card-title">Manage categories</h3>
                <div class="card-tools">
                    <a href="#" class="btn btn-tool btn-sm">
                        <i class="fas fa-download"></i>
                    </a>
                    <a href="#" class="btn btn-tool btn-sm">
                        <i class="fas fa-bars"></i>
                    </a>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Published</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td><b>{{ category.id }}</b></td>
                            <td><b>{{ category.title }}</b></td>
                            <td><b>{{ category.description }}</b></td>
                            <td><b>{{ category.published }}</b></td>
                            <td>
                                <div class="d-flex align-items-center">

                                    <a href="{{ path('set-category-actions', {'id': category.id, 'action': 'edit'}) }}"
                                       class="btn btn-warning mr-2">Edit</a>
                                    <a href="{{ path('set-category-actions', {'id': category.id, 'action': 'delete'}) }}"
                                       class="btn btn-danger mr-2">Delete</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="text-center">
            <a href="{{ path("category-add") }}" class="btn btn-success" style="margin-top: 20px;">Add a category</a>
        </div>
    </div>
{% endblock %}
