{% extends 'frontend_layout.html.twig' %}

{% block title %}4oom | password reset{% endblock %}

{% block body %}

    <div class="container">
        <section class="section register ">
            {% for message  in app.flashes('message') %}
                <div class="alert alert-info">
                    {{ message }}
                </div>
            {% endfor %}
        </section>
        <section class="section register ">
            {% for danger  in app.flashes('danger') %}
                <div class="alert alert-danger">
                    {{ danger }}
                </div>
            {% endfor %}
        </section>
        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                        <div class="card mb-3">

                            <div class="card-body">

                                <div class="pt-4 pb-2">
                                    <h5 class="card-title text-center pb-0 fs-4">Retrieve password</h5>
                                    <p class="text-center small">Enter your email, and we'll send you a link to reset the password!</p>
                                </div>


                                {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}

                                <div class="col-12">
                                    <label for="yourEmail" class="form-label d-flex justify-content-center">Your email</label>
                                    {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                                    <div class="invalid-feedback">Please enter a valid email address!</div>
                                </div>

                                <div class="col-12 d-flex justify-content-center" style="margin-top: 15px;">
                                    <button class="btn btn-primary" type="submit">Send</button>
                                </div>


                                {{ form_end(form) }}

                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </section>

    </div>

{% endblock %}