{% extends 'frontend_layout.html.twig' %}

{% block title %}4oom | my posts{% endblock %}

{% block body %}
    <h2 class="text-center" style="margin-bottom: 15px; margin-top: 15px;">My posts</h2>
    <div class="container" style="margin-top: 30px;">
        <div class="post-list">
            <div class="card mb-4" style="max-width: 540px; margin: 0 auto;">
                {% for post in posts %}
                    <div class="row no-gutters">
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">{{ post.title }}</h5>
                                <p class="card-text">{{ post.body|striptags }}</p>
                                <h6 class="card-subtitle mb-2 text-muted">Published on {{ post.dateCreated|date('F j, Y') }}</h6>
                                <h6 class="card-subtitle mb-2 text-muted">Last edit on {{ post.dateUpdated|date('F j, Y') }}</h6>
                                <a href="{{ path('full-post', {'id': post.id}) }}" class="btn btn-success">View full post</a>
                                <a href="{{ path('edit-post', {id: post.id}) }}" class="btn btn-warning">Edit</a>
                                <a href="{{ path('delete-post', {id: post.id}) }}" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
