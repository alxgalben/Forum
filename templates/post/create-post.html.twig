{% extends 'frontend_layout.html.twig' %}

{% block title %}4oom | Create a Post{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">Create a Post</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="form-group">
                            {{ form_label(form.title, 'Title', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Enter post title'}}) }}
                            {{ form_errors(form.title) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.body, 'Content', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(form.body, {'attr': {'class': 'form-control', 'placeholder': 'Enter post body', 'rows': '4'}}) }}
                            {{ form_errors(form.body) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.category, {'attr': {'class': 'form-control'}, 'placeholder': 'Choose category'}) }}
                        </div>
                        <div class="form-group">cc
                            {{ form_widget(form.file, {'attr': {'class': 'form-control', 'style': 'width: 20%; margin-top: 40px;'}}) }}
                        </div>
                        <button type="submit" class="btn btn-primary" style="margin-top: 15px;">Submit</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
